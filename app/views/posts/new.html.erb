<h4>Create new post</h4>

<h5>HTML Form</h5>
<form action = "/posts" method = "post">
  Title: <input type = "text" name ="title"><br>
  URL: <input type = "text" name = "url"><br>
  <input type = "submit">
</form>

<h5>Rails form helpers (Non-model backed):</h5>
<%= form_tag '/posts' do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <br/>
  <%= label_tag :url %>
  <%= text_field_tag :url %> 
  <br/> 
  <%= submit_tag 'Create Post' %>
<% end %>

<h5>Rails form helpers (model backed):</h5>

<% if @post.errors.any? %>
  <div class="alert alert-error">
    <h5>Please fix these errors:</h5>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
   </div>
<% end %>

<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>  
  <br/>
  <%= f.submit %>
<% end %>